<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.orygenapps.sema.activity.SubmitSurveyActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/submit_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your answers were submitted successfully! Thank you for participating in this survey :)"
            android:textSize="@dimen/text_size_notification"
            flatui:fl_textColor="fl_main" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/return_to_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_gravity="center"
            android:text="@string/action_return_to_dashboard"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_button"
            flatui:fl_theme="@array/grass"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:onClick="onReturnButtonClicked"/>

    </LinearLayout>

</RelativeLayout>
