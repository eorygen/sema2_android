<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/program_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:text="Program title"
                android:textSize="@dimen/text_size_program_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="5dp"
                android:text="Description"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="@dimen/text_size_sub" />

            <TextView
                android:id="@+id/program_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_program_info"
                android:text="Program description text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="5dp"
                android:text="Contact Information"
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_sub" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_program_info"
                        android:text="Name: " />

                    <TextView
                        android:id="@+id/program_contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_program_info" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:text="Phone: "
                        android:textSize="@dimen/text_size_program_info" />

                    <TextView
                        android:id="@+id/program_contact_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_program_info" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:text="Email: "
                        android:textSize="@dimen/text_size_program_info" />

                    <TextView
                        android:id="@+id/program_contact_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_program_info" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <com.cengalabs.flatui.views.FlatButton
                    android:id="@+id/program_phone_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_phone_button"
                    android:textStyle="bold"
                    flatui:fl_theme="@array/grass"
                    flatui:fl_blockButtonEffectHeight="3dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="8dp" />

                <com.cengalabs.flatui.views.FlatButton
                    android:id="@+id/program_email_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_email_button"
                    android:textStyle="bold"
                    flatui:fl_theme="@array/grass"
                    flatui:fl_blockButtonEffectHeight="3dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />

            </LinearLayout>

            <com.cengalabs.flatui.views.FlatButton
                android:id="@+id/demo_survey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_survey_button"
                android:textStyle="bold"
                flatui:fl_theme="@array/grass"
                flatui:fl_blockButtonEffectHeight="3dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>